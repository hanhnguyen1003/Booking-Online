    <script>
        var j = jQuery.noConflict();
        function viewPres(e) {
            let id = j(e).data('id');
            window.location.href = '/patient/home/viewPres/' + id;
        }
        function filterDoctor(e) {
            let v = removeAccents(e.value.toUpperCase());
            console.log(v);
            let trs = document.getElementById('sheet').getElementsByTagName('tr');
            for (var i = 0; i < trs.length; i++) {
                let dept = removeAccents(trs[i].cells[2].innerText.toUpperCase());
                let dated = removeAccents(trs[i].cells[3].innerText.toUpperCase());
                let name = removeAccents(trs[i].cells[4].innerText.toUpperCase());                
                if (dept.indexOf(v) > -1 || dated.indexOf(v) > -1 || name.indexOf(v) > -1 || v === '') {
                    trs[i].style.display = "";
                } else {
                    trs[i].style.display = "none";
                }
            }
        }
        function removeAccents(str) {
            return str.normalize('NFD')
                .replace(/[\u0300-\u036f]/g, '')
                .replace(/đ/g, 'd').replace(/Đ/g, 'D');
        }
    </script>
