    <script>
        var j = jQuery.noConflict();
        var infos = null;
        var index = 0;
        var weekDay = ['Chủ Nhật', 'Thứ 2', 'Thứ 3', 'Thứ 4', 'Thứ 5', 'Thứ 6', 'Thứ 7']
        var rowofpage = 5;
        var doctorList = null;
        var currentWeek = {};
        j(document).ready(() => {
            infos = JSON.parse(localStorage.getItem('infos'))
            index = infos.deptType.index;
            if (!infos.info[index]) {
                infos.info.push(
                    {
                        dept: null,
                        doctor: null,
                        timeRange: null,
                        room: null,
                        edu: null,
                        dated: null
                    });
            }
            j.ajax({
                type: "GET",
                async: false,
                url: "/patient/home/getTimeRange",
                success: function (data) {
                    console.log("time range: ", data);
                    infos.timeRange = data;
                },
                error: function (error) {
                    console.log('get tỉme range failed');
                }
            })
            j.ajax({
                type: "GET",
                async: false,
                url: "/patient/home/getcurrentweekschedule",
                success: function (d) {
                    console.log("current week: ", d);
                    let s = infos.timeRange.filter((e) => e.idSes === 1).map((e) => e.idPeriod)
                    let c = infos.timeRange.filter((e) => e.idSes === 2).map((e) => e.idPeriod)
                    for (let x of d) {
                        if (!currentWeek.hasOwnProperty(x.idEmp)) {
                            currentWeek[x.idEmp] = { s: [], c: [] }
                        }
                        timeList = x.timeRange.split(',').map((e) => parseInt(e));

                        if (timeList.some(r => s.includes(r))
                            && currentWeek[x.idEmp].s.indexOf(weekDay[(new Date(x.dated)).getDay()]) === -1) {

                            currentWeek[x.idEmp].s.push(`${weekDay[(new Date(x.dated)).getDay()]}`);
                        }
                        if (timeList.some(r => c.includes(r))
                            && currentWeek[x.idEmp].c.indexOf(weekDay[(new Date(x.dated)).getDay()]) === -1) {
                            currentWeek[x.idEmp].c.push(`${weekDay[(new Date(x.dated)).getDay()]}`);
                        }

                    }
                    console.log(currentWeek);
                },
                error: function (error) {
                    console.log('get currentweek schedule failed');
                }
            })
            j.ajax({
                type: "POST",
                async: false,
                data: { pagenumber: 1, rowofpage: rowofpage },
                url: "/patient/home/getdoctors",
                success: function (d) {
                    showDoctors(d)
                    doctorList = d;
                    console.log("du lieu lan dau:", d)

                },
                error: function (error) {
                    console.log('get doctors failed');
                }
            })

        })


        function getpagination(n, r) {
            j.ajax({
                type: "POST",
                async: false,
                data: { pagenumber: n, rowofpage: r },
                url: "/patient/home/getdoctors",
                success: function (d) {
                    doctorList = d;
                    console.log("due lieu theo trang: ", d)
                    showDoctors(d)
                },
                error: function (error) {
                    console.log('get doctors failed');
                }
            })
        }
        var getpage = (e) => {
            let value = parseInt(e.innerText);
            document.getElementById('curentpage').value = value;
            document.querySelectorAll('.p').forEach(item => item.classList.remove('active'))
            e.parentNode.classList.add('active');
            getpagination(value, rowofpage);
        }
        var getNext = () => {
            let li = document.getElementsByClassName('p');
            document.querySelectorAll('.p').forEach(item => item.classList.remove('active'))
            li[0].classList.add('active');
            let curent = parseInt(li[0].childNodes[0].innerText);
            console.log({ curent })
            for (var i = 0; i < li.length; i++) {
                li[i].childNodes[0].innerText = (curent + 3 + i)
            }
            getpagination(curent + 3, rowofpage);
            document.getElementById('curentpage').value = (curent + 3)
            CheckNext()
        }
        var getPrevious = (e) => {
            let li = document.getElementsByClassName('p');
            let curent = parseInt(li[0].childNodes[0].innerText)
            for (var i = 0; i < li.length; i++) {
                li[i].childNodes[0].innerText = (curent - 3 + i)
            }
            getpagination(curent - 3, rowofpage);
            document.getElementById('curentpage').value = curent - 3;
            CheckNext()
        }
        search.onclick = () => {
            let name = document.getElementById('name');
            let edu = document.getElementById('edu');
            let dept = document.getElementById('dept');
            let sex = document.getElementById('sex');
            let schedule = document.getElementById('schedule');
            var obj = {
                name: name.value.length > 0 ? name.value : null,
                idEdu: edu.value == '' ? null : parseInt(edu.value),
                IdDept: dept.value == '' ? null : dept.value,
                sexE: sex.value == '' ? null : sex.value == "false" ? false : true,
                schedule: schedule.value == '' ? null : parseInt(schedule.value)
            }
            console.log(obj);
            j.ajax({
                type: "POST",
                async: false,
                data: { obj: obj },
                url: "/patient/home/searchdoctor",
                success: function (d) {
                    doctorList = d;
                    showDoctors(d)
                    document.getElementById('pagina').classList.add('d-none')
                },
                error: function (error) {
                    console.log('get doctors failed');
                }
            })
        }
        function showDoctors(d) {
            if (d.length > 0) {
                console.log("show doctors");
                str = "";
                console.log(currentWeek)
                for (var i = 0; i < d.length; i++) {
                    let s = currentWeek[d[i]?.idEmp]?.s?.join(',')
                    let c = currentWeek[d[i]?.idEmp]?.c?.join(',')
                    console.log("NV ", d[i].nameEmp, s, c)
                    str += `
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="doctor-widget">
                                                        <div class="doc-info-left">
                                                            <div class="doctor-img">
                                                                <a href="doctor-profile.html">
                                                                  <img src="/assets/img/doctors/${d[i].images}" width="300" height="300" class="img-fluid" alt="User Image">
                                                                </a>
                                                            </div>
                                                            <div class="doc-info-cont">
                                                                <h4 class="doc-name"><a href="doctor-profile.html">${d[i].eduName}${d[i].nameEmp}</a></h4>
                                                                <p class="doc-speciality">${d[i].sexE == true ? "Nữ" : "Nam"}</p>
                                                                <p class="doc-speciality">${s ? "Sáng: " + s : ""}</p>
                                                                <p class="doc-speciality">${c ? "Chiều: " + c : ""}</p>
                                                                <p class="doc-department"><img src="/assets/img/specialities/${d[i].imagesDept}" class="img-fluid" alt="Speciality">${d[i].deptName}</p>

                                                            </div>
                                                        </div>
                                                        <div class="doc-info-right">
                                                            <div class="clini-infos">
                                                                <ul>
                                                                    <li><i class="far fa-money-bill-alt"></i>${d[i].price.toLocaleString(undefined, { maximumFractionDigits: 0 })}<i class="fas fa-info-circle" data-toggle="tooltip" title="Lorem Ipsum"></i></li>
                                                                </ul>
                                                            </div>
                                                            <div class="clinic-booking">
                                                              <a onclick="showDoctor(this)" data-id="${d[i].idEmp}" class="btn btn-sm bg-info-light">
                                                                <i class="far fa-eye"></i> Thông tin
                                                            </a>
                                                                <a class="apt-btn"  onclick="registerDoctor(this)" data-doctor='${JSON.stringify(d[i])}'>Đăng ký</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                          `
                }
                document.getElementById('doctorList').innerHTML = str;
            } else {
                document.getElementById('doctorList').innerHTML = "Không có dữ liệu";
            }
        }
        function showDoctor(e) {
            id = j(e).data('id');
            //data-toggle="modal" data-target="#appt_details"

            j.post('/patient/home/getDoctorById', { id: id }, (d) => {
                console.log(d);
                if (d) {
                    j('#appt_details').modal('show');
                    bodycontentdoctor.innerHTML =
