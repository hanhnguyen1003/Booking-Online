                                        </li>
                                        <li>
                                            <span class="title">Học hàm, học vị:${d.eduName}</span>
                                        </li>
                                        <li>
                                            <span class="title">Email:${d.email}</span>
                                        </li>

                                    </ul>`
                }

            })
        }
        function registerDoctor(e) {
            infos.info[index].doctor = j(e).data('doctor');
            localStorage.setItem('infos', JSON.stringify(infos));
            window.location.href = "/patient/home/bookdoctor";
        }
